{# Section pour afficher : barre de recherche #}
<div class="searchModule">
    <div class="searchBar">
        <form class="searchingForm" name="job_search_form" method="post">
            <div class="mb-3">
                {{ form_label(searchForm.title, 'Job recherché', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(searchForm.title, {'attr': {'class': 'form-control', 'placeholder': 'Votre Job idéal ici...'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(searchForm.city, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(searchForm.city, {'attr': {'class': 'form-control', 'placeholder': 'Le lieu souhaité ici...'}}) }}
            </div>
            <button type="submit" class="btn btn-primary search-btn">Rechercher</button>
            {{ form_widget(searchForm._token) }}
        </form>
    </div>
</div>

{# Section pour les résultats de recherche #}
<div class="searchResults">
    {% if jobs is not empty %}
        {% for job in jobs %}
            <div class="jobCard">
                <h2>{{ job.title }}</h2>
                <strong>{{ job.city }}</strong>
                <p>{{ job.description }}</p>
                <i>{{ job.salary }}€</i>
                <div class="jobSeeMore">
                    <a class="btn btn-primary" href="{{ path('app_job_show', {'id': job.id}) }}">Voir détails de
                        l'offre</a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="noResults">
            <p>Aucun résultat trouvé pour la recherche spécifiée.</p>
        </div>
    {% endif %}
</div>
