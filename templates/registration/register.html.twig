{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="grid-container">
    <div class="grid-child-image">
        <h1>Créer un compte</h1>
        <img src="{{ asset('build/images/people.svg') }}" alt="three business people"/>
    </div>
        <img src="{{ asset('build/images/programmer.svg') }}" alt="woman working on a computer"/>

    <div class="grid-child-form">

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_label(registrationForm.username, "Nom d'utilisateur", {
            label_attr: { class: 'label' }
        }) }}
        {{ form_row(registrationForm.username, {
            attr: { placeholder: "Choisissez votre nom", class: 'placeholder' }
        }) }}
        <hr>
        {{ form_label(registrationForm.email, 'Adresse e-mail', {
            label_attr: { class: 'label' }
        }) }}
        {{ form_row(registrationForm.email, {
            attr: { placeholder: 'Entrez votre adresse e-mail', class: 'placeholder' }
        }) }}
        <hr>
        {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {
            label_attr: { class: 'label' }
        }) }}
        {{ form_row(registrationForm.plainPassword.first, {
            attr: { placeholder: 'Choisissez un mot de passe', class: 'placeholder' }
        }) }}
        <hr>
        {{ form_label(registrationForm.plainPassword.second, 'Mot de passe', {
            label_attr: { class: 'label' }
        }) }}
        {{ form_row(registrationForm.plainPassword.second, {
            attr: { placeholder: 'Confirmez votre mot de passe', class: 'placeholder' }
        }) }}
        <hr>

        {{ form_label(registrationForm.roles, 'Vous êtes..', {
            label_attr: { class: 'radio-container' }
        }) }}

        {{ form_widget(registrationForm.roles, {
            attr: { placeholder: '', class: 'radio-container input' }
        }) }}

        <button type="submit" class="btn">Créer votre compte</button>
    {{ form_end(registrationForm) }}

        <div class="connection-div"></div>
        <a class="connection" href="{{ path('app_login') }}">
            Vous avez déjà un compte ?
        </a>
    </div>
    </div>
</div>

{% endblock %}

