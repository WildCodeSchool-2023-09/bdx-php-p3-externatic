<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}"/>
    <title>
        {% block title %}Externatic{% endblock %}
    </title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    {% if app.user is defined and app.user is not null %}
        {% include  app.user.roles.0 is same as('ROLE_CANDIDAT')  ? "includes/navbar.html.twig" : "includes/company_nav.html.twig" %}
    {% else %}
        {% include 'includes/navbar.html.twig' %}
    {%  endif %}
</header>
<main>
    {% block body %}

    {% endblock %}
</main>
<footer>
    {% if app.user is defined and app.user is not null %}
        {% include  app.user.roles.0 is same as('ROLE_CANDIDAT')  ? "includes/footer.html.twig" : "includes/company_footer.html.twig" %}
        {% else %}
        {% include 'includes/footer.html.twig' %}
    {%  endif %}
</footer>
</body>
</html>
