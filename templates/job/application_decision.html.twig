{% extends 'base.html.twig' %}
{% block title %}Applicants{% endblock %}

{% block body %}
<div class="grid-container">
    <div class="grid-child-image">
        <h1> Traiter la candidature de {{ application.curriculum.candidate.user.username }} pour le offre  de {{ job.title }} </h1>
        <img src="{{ asset('build/images/exciting.svg') }}" alt="person celebrating good news"/>
    </div>
    <div class="grid-child-form">
{{ form_start(statusForm) }}
                        {{ form_label(statusForm.status, "Status", {
                            label_attr: { class: 'radio-container' }
                        }) }}
                        {{ form_row(statusForm.status, {
                            attr: { placeholder: "update", class: 'radio-container input' }
                        }) }}
        <div class="submit_decision">
    <button type="submit">soumettre la décision</button>
    </div>
{{ form_end(statusForm) }}
    </div>
</div>

    {%  block javascript  %}
    <script>


        document.querySelector("label[for='status_form_status_0']").addEventListener("click", function(){
        document.querySelector("label[for='status_form_status_0']").innerText = "Vous avez choisi en attente "
        document.querySelector("label[for='status_form_status_1']").classList.add("roleButton")
        document.querySelector("label[for='status_form_status_2']").classList.add("roleButton")
    });

        document.querySelector("label[for='status_form_status_1']").addEventListener("click", function(){
        document.querySelector("label[for='status_form_status_1']").innerText = "Vous avez choisi acceptée"
        document.querySelector("label[for='status_form_status_0']").classList.add("roleButton")
        document.querySelector("label[for='status_form_status_2']").classList.add("roleButton")
    });
        document.querySelector("label[for='status_form_status_2']").addEventListener("click", function(){
        document.querySelector("label[for='status_form_status_2']").innerText = "Vous avez choisi refusé"
        document.querySelector("label[for='status_form_status_1']").classList.add("roleButton")
        document.querySelector("label[for='status_form_status_0']").classList.add("roleButton")

    });

    </script>
    {% endblock %}
{% endblock %}


