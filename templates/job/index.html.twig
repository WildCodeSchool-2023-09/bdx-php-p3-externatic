{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}

 {% for message in app.flashes('job') %}
     <div class="registered">
         {{ message }}
     </div>
 {% endfor %}
<div class="grid-container">
    <div class="grid-child-image">
        <h1>Mes offres d'emplois</h1>
        <img src="{{ asset('build/images/career.svg') }}" alt="man looking in the mirror"/>
    </div>
    <div class="grid-child-form">
        {% for job in jobs %}
            <div class="favoriteJobs">
                <div class="jobInfo">
                    <a  class="clickLink" href="{{ path('app_job_show', {'id': job.id}) }}">{{ job.title }}</a>
                </div>
                <div class="connection_link">
               <a class="connection"  href="{{ path('app_job_edit', {'id': job.id}) }}">Modifier l'offre</a>
            </div>
            </div>
        {% else %}
                <h2>Aucune offre d'emploi publiée pour le moment...</h2>

        {% endfor %}
<div class="connection_link">
    <a class="btn" href="{{ path('app_job_new') }}">Créer une offre d'emploi</a>
    </div>
{% endblock %}
