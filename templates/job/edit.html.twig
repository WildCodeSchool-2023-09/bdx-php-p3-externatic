{% extends 'base.html.twig' %}

{% block title %}Edit Job{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="card job-edit-card">
        <div class="card-header job-card-header">
            <h5 class="card-title">Éditez votre offre d'emploi</h5>
        </div>
        <div class="card-body job-card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                <label for="{{ form.title.vars.id }}" class="form-label">Titre</label>
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ form.adress.vars.id }}" class="form-label">Adresse</label>
                {{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ form.city.vars.id }}" class="form-label">Ville</label>
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ form.description.vars.id }}" class="form-label">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ form.startDate.vars.id }}" class="form-label">Date de début du contrat</label>
                {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ form.salary.vars.id }}" class="form-label">Salaire</label>
                {{ form_widget(form.salary, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button class="btn btn-warning mt-3">{{ button_label|default('Save') }}</button>

            {{ form_end(form) }}
        </div>
        <div class="card-footer job-card-footer">
            <a class="btn btn-primary" href="{{ path('app_job_show', {'id': job.id}) }}">Retour à l'offre</a>
            {{ include('job/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
